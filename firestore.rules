rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /reports/{reportId} {
      // Public read for now (tighten if needed)
      allow read: if true;

      // Create: must be signed in and own the doc.
      // (Let the client/Cloud Function set server timestamps; don't compare to request.time here.)
      allow create: if isSignedIn()
                    && request.resource.data.userId == request.auth.uid;

      // Update: only owner; userId & createdAt immutable
      allow update: if isSignedIn()
                    && resource.data.userId == request.auth.uid
                    && request.resource.data.userId == resource.data.userId
                    && request.resource.data.createdAt == resource.data.createdAt;

      // Delete: only owner
      allow delete: if isSignedIn()
                    && resource.data.userId == request.auth.uid;
    }
  }
}
